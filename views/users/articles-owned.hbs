<h2 class="my-3">Articulos Comprados</h2>

{{> filterBar }}

<div class="row my-5">
    <div class="col-5"><a href="/articles/search">EN VENTA</a></div>
    <div class="col-5"><a href="/articles/{{ session.id }}/...........">EN SUBASTA</a></div>
  </div>

<ul class="list-group mt-5">
  {{#each articles as |article|}}
    <li class="list-group-item d-flex justify-content-between align-items-center">
     <div class="row">
       <div class="col-3">
         <img src="/uploads/{{ article.photos }}" class="w-100" alt="photo article">
       </div>
       <div class="col-8 mx-3">
        <p>{{ article.name }}<span class="badge badge-primary mx-3">{{ article.price }}</span></p>
        <p>{{ article.description }}</p>
        <a href="/articles/{{ article.id }}">Ver detalle</a>
        <br>
        <a href="/reviews/{{article.id }}/addReview">Rate the Seller</a>
       </div>
      </div> 
    </li>
  {{/each}}
</ul>