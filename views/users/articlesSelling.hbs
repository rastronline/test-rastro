<h2 class="my-3">MIS ARTICULOS EN VENTA</h2>
 
{{> filterBar }}
{{> navArticlesUser }}

<div class="container">
  <div class="card-columns row justify-content-center">
    <div class="card m-2 position-relative">
      <a href="/articles/new" class="position-absolute" style="width:100%; height:100%; z-index:10"></a>
      <div class="row no-gutters">
        <div class="p-2">
          <div style="width:125px; height:125px; background:powderblue" class="card-img-top rounded new-icon" alt="{{ article.name }} photo">
            <div style="width:100%; height:100%; position:relative"><i style="position:absolute; left:25%; top:25%;" class="fas fa-plus-circle fa-4x text-info"></i></div>
          </div>
        </div>
        <div class="col-md-10 m-auto">
          <h2 class="text-center">Subir un producto más a mi catálogo</h2>
        </div>
      </div>
    </div>
    {{#each articles as |article| }}
      {{> cardArticleOwn session=../session article=article pathBack="selling"}}
    {{/each}}
  </div>
</div>