<div class="cointainer">
  <div>
    <a href="/articles/new" class="btn btn-primary my-5">SUBIR UN NUEVO ARTÍCULO</a>
  </div>
  <div class="row">
    <div class="col-3"><a href="/users/{{ session.id }}/myProducts">EN VENTA</a></div>
    <div class="col-3"><a href="/users/{{ session.id }}/...........">EN SUBASTA</a></div>
    <div class="col-3"><a href="/users/{{ session.id }}/sold">VENDIDOS</a></div>
    <div class="col-3"><a href="/users/{{ session.id }}/pending">PENDIENTES DE TASAR</a></div>
  </div>

  <ul class="list-group mt-5">
    {{#each articles as |article|}}
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <div class="row">
          <div class="col-3">
            <img src="/uploads/{{ article.photos }}" class="w-100" alt="photo article">
          </div>
          <div class="col-8 mx-3">
            <p>{{ article.name }}<span class="badge badge-primary">{{ article.price }}</span></p>
            <p>{{ article.description }}</p>
            <a href="/articles/{{ article.id }}" class="my-4">Ver detalle</a>
            <form action="/articles/{{ article.id }}/delete" method="POST">
              <button class="btn btn-warning mx-2" type="submit">Eliminar</button>
            </form>
            <a href="/articles/{{ article.id }}/edit" class="btn btn-info my-2" type="submit">Editar</a>
            <form action="/articles/{{ article.id }}/addToFav" method="POST">
              <button class="btn btn-danger mx-2" type="submit">Añadir a Favoritos</button>
            </form>
          </div>
        </div> 
      </li>
    {{/each}}
  </ul>
</div>