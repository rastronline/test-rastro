<div class="cointainer">
  <div>
    <a href="/articles/new" class="btn btn-primary my-5">SUBIR UN PRODUCTO</a>
  </div>
  <div class="row">
    <div class="col-4"><a href="/users/{{ session.id }}/myProducts">TUS ART√çCULOS</a></div>
    <div class="col-4"><a href="/users/{{ session.id }}/sold">VENDIDOS</a></div>
    <div class="col-4"><a href="/users/{{ session.id }}/pending">PENDIENTES DE TASAR</a></div>
  </div>

  <ul class="list-group mt-5">
    {{#each articles as |article|}}
      <li class="list-group-item d-flex justify-content-between align-items-center">
      <div>
          <p>{{ article.name }}<span class="badge badge-primary">{{ article.price }}</span></p>
          <p>{{ article.description }}</p>
          <a href="/articles/{{ article.id }}">Ver detalle</a>
          <form action="/articles/{{ article.id }}/delete" method="POST">
            <button class="btn btn-danger" type="submit">Eliminar</button>
          </form>
        </div> 
      </li>
    {{/each}}
  </ul>

</div>