<div class="cointainer">
  <h1 class="my-2">MIS ARTICULOS PENDIENTES DE TASACiÓN</h1>
  <div>
    <a href="/articles/new" class="btn btn-primary my-5">SUBIR UN NUEVO ARTÍCULO</a>
  </div>
  <div class="row">
    <div class="col-3"><a href="/users/{{ session.id }}/selling">EN VENTA</a></div>
    <div class="col-3"><a href="/users/{{ session.id }}/...........">EN SUBASTA</a></div>
    <div class="col-3"><a href="/users/{{ session.id }}/sold">VENDIDOS</a></div>
    <div class="col-3"><a href="/users/{{ session.id }}/pricing">PENDIENTES DE TASAR</a></div>
  </div>

  <ul class="list-group mt-5">
    {{#each articles as |article|}}
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <div class="row">
          <div class="col-3">
            <img src="/uploads/{{ article.photos }}" class="w-100" alt="photo article">
          </div>
          <div class="col-8 mx-3">
            <p>{{ article.name }}<span class="badge badge-primary">{{#if article.isPriced}}{{ article.price }}{{else }} ???? {{/if }}</span></p>
            <p>{{ article.description }}</p>
            <a href="/articles/{{ article.id }}" class="my-4">Ver detalle</a>

            {{#if article.isPriced }}
              <form action="/articles/{{ article.id }}/delete" method="POST">
                <button class="btn btn-warning mx-2" type="submit">Retirar Artículo</button>
              </form>
              <form action="/articles/{{ article.id }}/......." method="POST">
                <button class="btn btn-sucess mx-2" type="submit">Aceptar tasación</button>
              <form>
              <form action="/articles/{{ article.id }}/....." method="POST">
                <button class="btn btn-primary mx-2" type="submit">Poner en subasta</button>
              </form>
            {{else }}
              <div>
                <span class="badge badge-pill badge-secondary">PENDIENTE DE TASACIÓN</span>
              </div>
            {{/if }}
          </div>
        </div> 
      </li>
    {{/each}}
  </ul>
</div>