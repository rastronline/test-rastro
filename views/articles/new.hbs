<h2 class="my-3">SUBIDA DE ARTÍCULO</h2>

<div class="container my-5">
  <form action="/articles/new" class="edit-user-form" method="POST" enctype="multipart/form-data">
    <div class="card">
      <div class="card-body">

        <input type="text" name="owner" value="{{ session.id }}" style="display: none">
       
        <div class="form-group py-2">
          <h5 for="formGroupExampleInput" class="font-weight-bold">Nombre del artículo: </h5>
          <input type="text" class="form-control" id="formGroupExampleInput" name="name" placeholder="Dale un nombre" value="">
        </div>

        <div class="form-group py-2">
          <h5 for="formGroupExampleInput" class="font-weight-bold">Precio al que te gustaría venderlo: </h5>
          <input type="text" class="form-control" id="formGroupExampleInput" name="priceSeller" placeholder="Ponle un precio" value="">
        </div>
       
        <div class="form-group py-2">
          <h5 for="formGroupExampleInput" class="font-weight-bold">Seleccione la categoría a la que corresponde: </h5>
          <select class="custom-select" name="category" id="inputGroupSelect01" placeholder="Elija categoría...">
            <option disabled selected>Elija una categoría...</option>
            {{#each categories as |category| }}
            <option value="{{ category.id }}">{{ category.name }}</option>
            {{/each }}
          </select>
        </div>

        <div class="form-group py-2">
          <h5 for="formGroupExampleInput" class="font-weight-bold">Descripción del artículo: </h5>
          <textarea class="form-control" id="exampleFormControlTextarea1" name="description" rows="4" placeholder="Describe el artículo" value=""></textarea>
        </div>

        <div class="form-group py-2">
          <select class="custom-select" name="condition" id="inputGroupSelect02">
            <option selected disabled>Estado de conservación ...</option>
            {{#each conditions as |condition| }}
              <option value="{{ condition }}">{{ condition }}</option>
            {{/each }}
          </select>
        </div>

        <div class="form-group py-2">
          <h5 for="formGroupExampleInput" class="font-weight-bold">Añada fotos del producto: </h5>
          <input name="photos" type="file" class="form-control-file mb-2" id="photos" accept="image/jpeg" multiple>
          {{!-- <input type="text" class="form-control" id="formGroupExampleInput" name="priceSeller" placeholder="Ponle un precio" value=""> --}}
        </div>

        <div class="form-group py-2">
          <h5 for="formGroupExampleInput" class="font-weight-bold">Ubicación del artículo: </h5>
          <div class="row justify-content-center" style="margin: inherit">
            <input type="textbox" class="form-control col-6 mx-2" id="address" name="address" placeholder="Introduzca una dirección" value="{{ session.address }}">
            <input type="button" class="col-2 btn btn-secondary mx-2" value="Actualizar" onclick="codeAddress()">
          </div>
          <div id='lat-lng'>
            <div class="input-group mb-2">
              <div class="input-group-prepend">
                <span class="input-group-text"><i class="fas fa-map-marker"></i></span>
              </div>
              <input type="text" id="latitude" class="form-control" name="latitude" value="{{ session.location.coordinates.[1] }}" placeholder="Latitude"/>
            </div>
            <div class="input-group mb-2">
              <div class="input-group-prepend">
                <span class="input-group-text"><i class="fas fa-map-marker"></i></span>
              </div>
              <input type="text" id="longitude" class="form-control" name="longitude" value="{{ session.location.coordinates.[0] }}" placeholder="Longitude"/>
            </div>
          </div>
          <div id="map"></div>
        </div>
      
      </div>
      <button type="submit" class="col-6 offset-6 mx-auto btn btn-lg btn-danger my-3 rounded-pill my-2">Subir el artículo a tasación</button>
    </div>
  </form>
</div>


