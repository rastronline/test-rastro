<ul class="list-group mt-5">
  {{#each articles as |article|}}
    <li class="list-group-item d-flex justify-content-between align-items-center">
     <div class="row">
       <div class="col-3">
         <img src="/uploads/{{ article.photos }}" class="w-100" alt="photo article">
       </div>
       <div class="col-8 mx-3">
        <p>{{ article.name }}<span class="badge badge-primary mx-3">{{ article.price }}</span></p>
        <p>{{ article.description }}</p>
        <a href="/articles/{{ article.id }}">Ver detalle</a>
        <a class="my-5 font-weight-bold text-right btn btn-danger" href="/users/{{ session.id }}/addToFav">AÃ‘ADIR A FAVORITOS</a>
       </div>
      </div> 
    </li>
  {{/each}}
</ul>