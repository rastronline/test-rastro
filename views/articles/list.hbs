{{> navArticles}}

<ul class="list-group mt-5">
  {{#each articles as |article|}}
    <li class="list-group-item d-flex justify-content-between align-items-center">
     <div class="row">
       <div class="col-3">
         <img src="/uploads/{{ article.photos }}" class="w-100" alt="photo article">
       </div>
       <div class="col-8 mx-3">
        <p>{{ article.name }}<span class="badge badge-primary mx-3">{{ article.priceAppraiser }}</span></p>
        <p>Category: {{ article.category }}</p>
        <p>{{ article.description }}</p>
        <a href="/articles/{{ article.id }}">Ver detalle</a>
       </div>
      </div> 
    </li>
  {{/each}}
</ul>