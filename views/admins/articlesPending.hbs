<div class="cointainer">
  <h1 class="my-2">ARTICULOS PENDIENTES MI TASACiÃ“N</h1>

  <ul class="list-group mt-5">
    {{#each articles as |article|}}
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <div class="row">
          <div class="col-3">
            <img src="/uploads/{{ article.photos }}" class="w-100" alt="photo article">
          </div>
          <div class="col-8 mx-3">
            <p>{{ article.name }}<span class="badge badge-primary"></span></p>
            <p>{{ article.description }}</p>
            <a href="/admins/{{ article.id }}/" class="my-4">Ver detalles para tasar</a>
          </div>
        </div> 
      </li>
    {{/each}}
  </ul>
</div>