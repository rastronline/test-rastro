<h2 class="my-3">ARTÍCULO A TASAR</h2>

<div class="container my-5">
  <div class="row justify-content-center">
    <div class="card p-1 mx-1 my-2 col-8">
      
      <div class="py-2 px-4 d-flex justify-content-between align-items-baseline">
        <a href="/articles/user/{{ article.owner }}">
          <img src="../{{ article/owner.profilePic }}" class="rounded-circle mr-1" style="width: 70px; height: 70px" alt="photo frofile">
          <span>{{ article.owner.name }}</span>
        </a>
        <div>
        </div>
      </div>

      <div>
        <div id="carouselExampleIndicators" class="carousel slide px-3" data-ride="carousel">
          <ol class="carousel-indicators">
            {{#each article.photos as |photo| }}
            <li data-target="#carouselExampleIndicators" data-slide-to="{{@index }}" class="{{#if @first }} active {{/if }}"></li>
            {{/each}}
          </ol>
          <div class="carousel-inner">
            {{#each article.photos as |photo| }}
            <div class="carousel-item {{#if @first }} active {{/if }}">
              <img src="../{{ photo }}" class="d-block w-100 rounded" style="height:500px" alt="photo {{@index}}">
            </div>
            {{/each}}
          </div>
          <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="" aria-hidden="true"><i class="far fa-arrow-alt-circle-left fa-3x text-light"></i></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="" aria-hidden="true"><i class="far fa-arrow-alt-circle-right fa-3x text-light"></i></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      <div>
      <div class="card-body py-2 px-4">
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="name">Nombre del artículo:</label>
          <input type="text" class="form-control" name="name" id="name" placeholder="Nombre" value="{{ article.name }}" disabled>
        </div>
        <div class="form-group col-md-6">
          <label for="priceSeller">Precio que propone el vendedor:</label>
          <input type="text" class="form-control" name="priceSeller" id="priceSeller" value="{{ article.priceSeller }}" placeholder="Precio prupuesto por el vendedor" rows="5" disabled>
        </div>
      </div>
      <div class="form-group">
        <label for="description">Descripción:</label>
        <textarea type="text" class="form-control" id="description" name="description" placeholder="Descripción del artículo" disabled>{{ article.desciption }}</textarea>
      </div>
      <div>
        <input type="textbox" class="form-control col-12 mx-0" id="address" name="address" placeholder="Dirección del artículo" value="{{ article.address }}" readonly disabled>          
        <div id="map" class="col-12 my-2 rounded" style="height:150px"></div>
      </div>
      <hr>

      <h4 class="font-weight-bold"><u>MI TASACIÓN</u></h4>
      <form action="/admins/articles/{{ article.id }}/handlePricing" class="form-inline" method="post">
        <div class="form-group">
          <label for="pricing" class="mx-2">Valoro este artículo en: 
            <input type="text" class ="form-control col-2 mx-2 text-right" name="priceAppraiser" value="{{ article.priceSeller }}" placeholder="{{ article.priceSeller }} €">
          EUROS</label>
        </div>
        <div class="text-center w-100">
          <button type="submit" class="btn btn-primary m-4" name="resultAppraisal" value="send">ENVIAR TASACIÓN</button>
          <button type="submit" class="btn btn-danger m-4" name="resultAppraisal" value="refuse">RECHAZAR ARTÍCULO</button>
        </div>
      </form>

